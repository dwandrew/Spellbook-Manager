<h1> Monster Books for <%= current_user.username %> </h1>

<table>
    <tr>
        <th> Book Name </th>
        <th> Number of Monsters </th>
        <th> View Book Contents </th>
        <th> Edit Book </th>
        <th> Delete Book </th>
    </tr>
<% Monsterbook.all.select {|book| book.user_id == current_user.id}.each do |book|%>
<tr>
<td><%= book.book_name %> <br> </td>
<td><%= book.monsters.length %><br></td>
<td><form method='get' action = '/monsterbook/<%= book.id %>'>
<input type="submit" value="View Monsters ">
</form></td>

<td><form method='get' action = '/monsterbook/<%= book.id %>/edit'>
<input type="submit" value="Edit Monsterbook"></form></td>

<td> <form method='post' action = '/monsterbook/delete/<%= book.id %>'>
<input type="hidden" name="_method" value="delete" >
<input type="submit" value="Delete Monster Book" onclick="return confirm('Are you sure you want to delete this item?');">

</form></td>
</tr>

<% end %>
</table>